<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Add custom CSS to make table borders blurred */
        .table td,
        .table th {
            border-color: rgba(0, 0, 0, 0.1); /* Adjust opacity here */
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>
    <div class="container" style="min-height: 90vh;">
        <div class="row">
            <div class="col-md-12"> <!-- Change col-md-8 to col-md-12 -->

                <!-- Modal -->
                <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Add New Category</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form method="POST">
                                    <div class="mb-3">
                                        <label for="categoryName" class="form-label">Category Name</label>
                                        <input type="text" class="form-control" id="categoryName" name="categoryName"
                                            placeholder="Input Category Name" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary modal-button js-modal-trigger" data-bs-toggle="modal"
                    data-bs-target="#modal">Add New Category</button>

                <table class="table table-bordered table-striped table-hover" style="margin-top: 1rem;">
                    <thead>
                        <tr>
                            <th scope="col">Category Name</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(function(category, index){ %>

                        <tr>
                            <td>
                                <%= category.categoryName %>
                            </td>
                            <td>
                                <button class="btn btn-primary" onclick="showHide('<%= index %>')" id="activeActionButton<%= index %>">Show Action</button>
                                <div id="actionButton<%= index %>" style="display: none;">
                                    <a href="<%= baseURL %>/delete/<%= category._id %>" class="btn btn-danger" onclick="return confirm('Confirm to delete?')">Delete</a>
                                    <a href="<%= baseURL %>/edit/<%= category._id %>" class="btn btn-warning">Edit</a>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="/javascripts/utils.js"></script>
    <script src="/javascripts/matchPassword.js"></script>
</body>

</html>
